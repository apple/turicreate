configurations {
    Toolset {
    key : "PlatformToolset";
    choices: { v140, v120 };
    };
}

nuget {
    // The nuspec file metadata.
    nuspec {

        // Unique package identifier
        id = AWSSDKCPP-S3;

        // Version number. Follows NuGet standards. (currently SemVer 1.0)
        version : 0.14.20060301.3;

        // Display name for package.
        title: AWS SDK for C++ (Amazon Simple Storage Service);

        // List of package authors.  Braces may be ommited if only one author.
        authors: Amazon Web Services;

        // URL link to the license this package is released under.
        licenseUrl: "http://aws.amazon.com/apache2.0/";

        // URL to the project website (if any).
        projectUrl: "http://github.com/aws/aws-sdk-cpp";

        // URL to an image to be used for package icons.
        iconUrl: "http://media.amazonwebservices.com/aws_singlebox_01.png";

        // If the license this package is being released
        // under has use restrictions, set this to "true".
        requireLicenseAcceptance:false;

        summary: "v120 and v140 binary packages along with header files. No custom memory management. Standard Compiler flags used. For more info, see https://github.com/aws/aws-sdk-cpp/blob/master/README.md";

        // Extended description of the package contents.
        description: "Amazon Simple Storage Service Client for the AWS SDK for C++. AWS SDK for C++ provides a modern C++ (version C++ 11 or later) interface for Amazon Web Services (AWS). It is meant to be performant and fully functioning with low- and high-level SDKs, while minimizing dependencies and providing platform portability (Windows, OSX, Linux, and mobile).";

        // Copyright notice.
        copyright: Copyright 2016;

        // Tags of arbitrary text for categorizing and filtering.
        tags: { AWS, Amazon, cloud, aws-sdk-cpp, native, s3 };
    };

    dependencies {
       packages: {
            AWSSDKCPP-Core/0.14.1
       }
    }

    files {
        // All .h and .hpp  files in <src_root>\include, but not in subdirectories.
        // Included for all conditions.
        nestedInclude: {
            #destination = ${d_include}\aws\s3;
            "..\include\aws\s3\**\*.h"
        };

        // Include these specific files in the libpath and "copy to output" path only
        // under these pivot conditions.
        [x64,release,v140,dynamic] {  // x64, dll (dynamic linking)
            lib+= { ..\bin\windows\intel64\vs2015\release\aws-cpp-sdk-s3.lib };
            bin+= { ..\bin\windows\intel64\vs2015\release\aws-cpp-sdk-s3.dll };

            symbols+= { ..\bin\windows\intel64\vs2015\release\aws-cpp-sdk-s3.pdb };
        }

        [x64,release,v120,dynamic] {  // x64, dll (dynamic linking)
            lib+= { ..\bin\windows\intel64\vs2013\release\aws-cpp-sdk-s3.lib };
            bin+= { ..\bin\windows\intel64\vs2013\release\aws-cpp-sdk-s3.dll };

            symbols+= { ..\bin\windows\intel64\vs2013\release\aws-cpp-sdk-s3.pdb };
        }

        [x64,debug,v140,dynamic] {  // x64, dll (dynamic linking)
            lib+= { ..\bin\windows\intel64\vs2015\debug\aws-cpp-sdk-s3.lib };
            bin+= { ..\bin\windows\intel64\vs2015\debug\aws-cpp-sdk-s3.dll };

            symbols+= { ..\bin\windows\intel64\vs2015\debug\aws-cpp-sdk-s3.pdb };
        }

        [x64,debug,v120,dynamic] {  // x64, dll (dynamic linking)
            lib+= { ..\bin\windows\intel64\vs2013\debug\aws-cpp-sdk-s3.lib };
            bin+= { ..\bin\windows\intel64\vs2013\debug\aws-cpp-sdk-s3.dll };

            symbols+= { ..\bin\windows\intel64\vs2013\debug\aws-cpp-sdk-s3.pdb };
        }

        [x64,release,v140,static] {  // x64, static linking
            lib+= { ..\lib\windows\intel64\vs2015\release\aws-cpp-sdk-s3.lib };
        }

        [x64,release,v120,static] {  // x64, static linking
            lib+= { ..\lib\windows\intel64\vs2013\release\aws-cpp-sdk-s3.lib };
        }

        [x64,debug,v140,static] {  // x64, static linking
            lib+= { ..\lib\windows\intel64\vs2015\debug\aws-cpp-sdk-s3.lib };
        }

        [x64,debug,v120,static] {  // x64, static linking
            lib+= { ..\lib\windows\intel64\vs2013\debug\aws-cpp-sdk-s3.lib };
        }

        [x86,release,v140,dynamic] {  // x86, dll (dynamic linking)
            lib+= { ..\bin\windows\ia32\vs2015\release\aws-cpp-sdk-s3.lib };
            bin+= { ..\bin\windows\ia32\vs2015\release\aws-cpp-sdk-s3.dll };

            symbols+= { ..\bin\windows\ia32\vs2015\release\aws-cpp-sdk-s3.pdb };

        }

        [x86,release,v120,dynamic] {  // x86, dll (dynamic linking)
            lib+= { ..\bin\windows\ia32\vs2013\release\aws-cpp-sdk-s3.lib };
            bin+= { ..\bin\windows\ia32\vs2013\release\aws-cpp-sdk-s3.dll };

            symbols+= { ..\bin\windows\ia32\vs2013\release\aws-cpp-sdk-s3.pdb };
        }

        [x86,debug,v140,dynamic] {  // x86, dll (dynamic linking)
            lib+= { ..\bin\windows\ia32\vs2015\debug\aws-cpp-sdk-s3.lib };
            bin+= { ..\bin\windows\ia32\vs2015\debug\aws-cpp-sdk-s3.dll };

            symbols+= { ..\bin\windows\ia32\vs2015\debug\aws-cpp-sdk-s3.pdb };
        }

        [x86,debug,v120,dynamic] {  // x86, dll (dynamic linking)
            lib+= { ..\bin\windows\ia32\vs2013\debug\aws-cpp-sdk-s3.lib };
            bin+= { ..\bin\windows\ia32\vs2013\debug\aws-cpp-sdk-s3.dll };

            symbols+= { ..\bin\windows\ia32\vs2013\debug\aws-cpp-sdk-s3.pdb };
        }

        [x86,release,v140,static] {  // x86, static linking
            lib+= { ..\lib\windows\ia32\vs2015\release\aws-cpp-sdk-s3.lib };
        }

        [x86,release,v120,static] {  // x86, static linking
            lib+= { ..\lib\windows\ia32\vs2013\release\aws-cpp-sdk-s3.lib };
        }

        [x86,debug,v140,static] {  // x86, static linking
            lib+= { ..\lib\windows\ia32\vs2015\debug\aws-cpp-sdk-s3.lib };
        }

        [x86,debug,v120,static] {  // x86, static linking
            lib+= { ..\lib\windows\ia32\vs2013\debug\aws-cpp-sdk-s3.lib };
        }
    };

    targets {
        // Additional declarations to insert into consuming projects after most of the
        // project settings. (These may NOT be modified in visual studio by a developer
        // consuming this package.)
        // This node is often used to set defines that are required that must be set by
        // the consuming project in order to correctly link to the libraries in this
        // package.  Such defines may be set either globally or only set under specific
        // conditions.
        [dynamic]
        Defines += USE_IMPORT_EXPORT;
    }
}
